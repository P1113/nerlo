<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="compile" name="nerlo build"  basedir=".">

	<target name="compile">
      <mkdir dir="./bin"/>
      <javac destdir="./bin" debug="on" optimize="on">
        <src path="./src"/>
        <classpath>
          <fileset dir="./lib">
            <include name="**/*.jar" />
          </fileset>
        </classpath>
      </javac>
   </target>

   <target name="clean">
      <delete dir="./bin"/>
   	  <delete dir="./dist"/>
   </target>	
	
	<target name="dist">
    	<mkdir dir="./dist"/>
        <jar destfile="./dist/nerlo.jar">
            <manifest>
                <attribute name="Main-Class" value="org.ister.nerlo.Main"/>
                <attribute name="Class-Path" value=". nerlo_lib/OtpErlang.jar nerlo_lib/commons-cli-1.2.jar"/>
            </manifest>
            <fileset dir="./bin"/>
        </jar>
        <delete dir="./dist/nerlo_lib"/>
        <mkdir dir="./dist/nerlo_lib"/>
        <copy file="./lib/OtpErlang.jar" todir="./dist/nerlo_lib"/>
        <copy file="./lib/commons-cli-1.2.jar" todir="./dist/nerlo_lib"/>
    </target>
</project>
